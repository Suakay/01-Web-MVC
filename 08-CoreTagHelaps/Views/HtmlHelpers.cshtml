
@model User

<div class="row justify-content-center" style="margin-top:50px;">
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h3>HTML Helper Sayfası</h3>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("HtmlHelpers", "User", FormMethod.Post))
                {
                    <div class="form-group">
                        <label for="UserName">Kullanıcı Adı:</label>
                        @Html.TextBoxFor(u => u.UserName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="Password">Password:</label>
                        @Html.PasswordFor(u => u.Password, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn-primary btn-primary btn-block">Giriş Yap</button>
                }
            </div>
            <div class="card-footer">
                <h5>&copy; Bilge Adam Boost</h5>
            </div>
        </div>
    </div>
</div>
